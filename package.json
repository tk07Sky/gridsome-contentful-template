{
  "name": "gridsome-contentful-template",
  "private": true,
  "scripts": {
    "dev": "gridsome develop",
    "build": "gridsome build",
    "explore": "gridsome explore",
    "lint": "run-s lint:script lint:style",
    "lint:script": "eslint --fix --ext .js,.vue --ignore-path .gitignore src/",
    "lint:style": "stylelint --fix src/**/*.{css,scss} src/components/**/*.vue src/layouts/**/*.vue src/pages/**/*.vue src/templates/**/*.vue"
  },
  "dependencies": {
    "@gridsome/source-contentful": "^0.5.2",
    "contentful": "^7.14.0",
    "gridsome": "^0.7.0",
    "marked": "^4.0.10",
    "ress": "^2.0.4",
    "sanitize-html": "^1.22.1",
    "style-resources-loader": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^9.7.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-gridsome": "^1.4.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2",
    "vue-eslint-parser": "^7.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn lint:script",
      "git add"
    ],
    "*.{scss,vue}": [
      "yarn lint:style",
      "git add"
    ]
  }
}
